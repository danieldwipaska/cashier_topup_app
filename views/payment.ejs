<div class="container-md mt-1 mb-3">
  <div class="row my-2">
    <div class="col-md-9 mx-auto my-1 px-4">
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Foods</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Drinks</button>
        </li>
      </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
          <div class="row">
            <% foods.forEach((elementFood) => { %>

            <div class="col-lg-3 my-2">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title mb-4"><%= elementFood.menu %></h5>

                  <form action="/payment/temp" method="post">
                    <div class="mb-1">
                      <input type="hidden" name="menu" value="<%= elementFood.menu %>" readonly />
                      <input type="hidden" name="price" value="<%= elementFood.price %>" readonly />
                      <input type="hidden" name="barcode" value="<%= data.barcode %>" readonly />
                      <input type="hidden" name="customerName" value="<%= data.customer_name %>" readonly />
                      <input type="hidden" name="customerId" value="<%= data.customer_id %>" readonly />
                      <input type="number" name="amount" id="amount" style="width: 50%" required />
                    </div>
                    <button class="btn btn-info float-end" type="submit">Add</button>
                  </form>
                </div>
              </div>
            </div>

            <% }); %>
          </div>
        </div>
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
          <div class="row">
            <% drinks.forEach((elementDrink) => { %>

            <div class="col-lg-3 my-2">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= elementDrink.menu %></h5>
                  <form action="/payment/temp" method="post">
                    <div class="mb-1">
                      <input type="hidden" name="menu" value="<%= elementDrink.menu %>" readonly />
                      <input type="hidden" name="price" value="<%= elementDrink.price %>" readonly />
                      <input type="hidden" name="barcode" value="<%= data.barcode %>" readonly />
                      <input type="hidden" name="customerName" value="<%= data.customer_name %>" readonly />
                      <input type="hidden" name="customerId" value="<%= data.customer_id %>" readonly />
                      <input type="number" name="amount" id="amount" style="width: 50%" required />
                    </div>
                    <button class="btn btn-info float-end" type="submit">Add</button>
                  </form>
                </div>
              </div>
            </div>

            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row my-1">
    <div class="col-md-9 mx-auto my-1 px-4">
      <form action="/payment" method="post">
        <div class="row">
          <div class="mb-1">
            <label for="barcode" class="form-label text-secondary">Card</label>
            <input type="text" class="form-control" id="barcode" name="barcode" readonly value="<%= data.barcode %>" />
          </div>

          <div class="mb-1">
            <label for="name" class="form-label text-secondary">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= data.customer_name %>" readonly />
          </div>

          <div class="mb-1">
            <label for="balance" class="form-label text-secondary">Balance</label>
            <input type="text" class="form-control" id="balance" name="balance" value="<%= Intl.NumberFormat('en-US').format(data.balance) %>" readonly />
          </div>

          <div class="mb-1 col-auto">
            <label for="isMember" class="form-label text-secondary">Member Status</label>
            <input type="text" class="form-control" id="isMember" name="isMember" value="<%= data.is_member %>" readonly />
          </div>

          <% if (data.is_active) { %>
          <div class="mb-1 col-auto">
            <label for="isActive" class="form-label text-secondary">Activation</label>
            <input type="text" class="form-control bg-success text-light" id="isActive" name="isActive" value="<%= data.is_active %>" readonly />
          </div>
          <% } else { %>
          <div class="mb-1 col-auto">
            <label for="isActive" class="form-label text-secondary">Activation</label>
            <input type="text" class="form-control bg-danger text-light" id="isActive" name="isActive" value="<%= data.is_active %>" readonly />
          </div>
          <% } %> <% if (data.dine_in) { %>
          <div class="mb-1 col-auto">
            <label for="dineIn" class="form-label text-secondary">Dine In</label>
            <input type="text" class="form-control bg-success text-light" id="dineIn" name="dineIn" value="<%= data.dine_in %>" readonly />
          </div>
          <% } else { %>
          <div class="mb-1 col-auto">
            <label for="dineIn" class="form-label text-secondary">Dine In</label>
            <input type="text" class="form-control bg-danger text-light" id="dineIn" name="dineIn" value="<%= data.dine_in %>" readonly />
          </div>

          <% } %>

          <div class="mb-1">
            <label for="payment" class="form-label text-secondary">Payment</label>
            <input type="number" class="form-control" id="payment" name="payment" value="<%= sumPayment %>" readonly />
            <% if (data.balance - sumPayment < 0) { %>
            <p class="text-danger px-2">NOT ENOUGH BALANCE</p>
            <% }; %>
            <input class="form-control" type="hidden" name="customerId" value="<%= data.customer_id %>" readonly />
          </div>
        </div>
        <div class="row my-3 multi-button">
          <div class="col-lg-8 mx-auto text-center">
            <a class="button shadow my-3" href="/payment/search" role="button">Back</a>
            <% if (data.balance - sumPayment >= 0 && sumPayment > 0) { %>
            <button class="button shadow my-3" type="submit">Pay Now!</button>
            <% }; %>

            <a class="button shadow my-3" href="/" role="button">Menu</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
