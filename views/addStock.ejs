<div class="container-md mt-1 mb-3">
  <div class="row my-1">
    <div class="col-md-9 mx-auto">
      <h4>Add a Stock</h4>
    </div>
  </div>
  <div class="row my-1">
    <div class="col-md-9 mx-auto my-1 px-4">
      <form action="/stock" method="post">
        <div class="row">
          <div class="mb-1 col-auto">
            <label for="name" class="form-label text-secondary">Type</label>
            <input type="text" class="form-control" id="name" name="name" autofocus="autofocus" required />
          </div>

          <div class="mb-1 col-auto">
            <label for="amount" class="form-label text-secondary">Amount</label>
            <input type="number" class="form-control" id="amount" name="amount" required />
          </div>

          <div class="mb-1 col-auto">
            <label for="unit" class="form-label text-secondary">Unit</label>
            <input type="text" class="form-control" id="unit" name="unit" required />
          </div>
        </div>
        <div class="row my-5 multi-button">
          <div class="col-md-8 mx-auto text-center">
            <a class="button shadow" href="/stock/list" role="button">Back</a>
            <button class="button shadow" type="submit">Add</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
