<div class="container-md my-2">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="row">
        <div class="mb-1 col-auto">
          <label for="name" class="form-label text-secondary">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= data.customer_name %>" readonly />
        </div>

        <div class="mb-1 col-auto">
          <label for="balance" class="form-label text-secondary">Balance</label>
          <input type="text" class="form-control" id="balance" name="balance" value="<%= Intl.NumberFormat('en-US').format(data.balance) %>" readonly />
        </div>

        <% if (status === 'topup' || status === 'payment' || status === 'checkout') { %>

        <div class="mb-3 col-auto">
          <label for="receipt" class="form-label text-secondary">Send Receipt (WA)</label>
          <div class="d-flex flex-row">
            <input type="text" class="form-control" id="receipt" name="receipt" value="<%= payment.customer_id %>" required />
            <div class="receipt">
              <input type="hidden" class="form-control" id="action" name="action" value="<%= payment.action %>" required />
              <input type="hidden" class="form-control" id="customerName" name="customerName" value="<%= payment.customer_name %>" required />
              <input type="hidden" class="form-control" id="customerId" name="customerId" value="<%= payment.customer_id %>" required />
              <input type="hidden" class="form-control" id="payment" name="payment" value="<%= payment.payment %>" required />
              <input type="hidden" class="form-control" id="invoiceNumber" name="invoiceNumber" value="<%= payment.invoice_number %>" required />
              <input type="hidden" class="form-control" id="initialBalance" name="initialBalance" value="<%= payment.initial_balance %>" required />
              <input type="hidden" class="form-control" id="finalBalance" name="finalBalance" value="<%= payment.final_balance %>" required />
              <input type="hidden" class="form-control" id="createdAt" name="createdAt" value="<%= payment.created_at %>" required />
              <input type="hidden" class="form-control" id="menuNames" name="menuNames" value="<%= payment.menu_names %>" required />
              <input type="hidden" class="form-control" id="menuAmount" name="menuAmount" value="<%= payment.menu_amount %>" required />
              <input type="hidden" class="form-control" id="menuPrices" name="menuPrices" value="<%= payment.menu_prices %>" required />
              <input type="hidden" class="form-control" id="menuKinds" name="menuKinds" value="<%= payment.menu_kinds %>" required />
              <input type="hidden" class="form-control" id="menuDiscounts" name="menuDiscounts" value="<%= payment.menu_discounts %>" required />
              <input type="hidden" class="form-control" id="menuDiscountPercents" name="menuDiscountPercents" value="<%= payment.menu_discount_percents %>" required />
            </div>
            <button class="btn btn-secondary mx-1 send-receipt-button">Send</button>
            <div class="sending-status"></div>
          </div>
        </div>

        <% } %>
      </div>
    </div>
  </div>
</div>

<script>
  const sendReceiptButton = document.querySelector('.send-receipt-button');
  const sendingStatus = document.querySelector('.sending-status');
  const receipts = document.querySelector('.receipt');
  const action = document.querySelector('#action');
  const customerName = document.querySelector('#customerName');
  const customerId = document.querySelector('#customerId');
  const payment = document.querySelector('#payment');
  const invoiceNumber = document.querySelector('#invoiceNumber');
  const initialBalance = document.querySelector('#initialBalance');
  const finalBalance = document.querySelector('#finalBalance');
  const createdAt = document.querySelector('#createdAt');
  const menuNames = document.querySelector('#menuNames');
  const menuAmount = document.querySelector('#menuAmount');
  const menuPrices = document.querySelector('#menuPrices');
  const menuKinds = document.querySelector('#menuKinds');
  const menuDiscounts = document.querySelector('#menuDiscounts');
  const menuDiscountPercents = document.querySelector('#menuDiscountPercents');

  sendReceiptButton.addEventListener('click', async () => {
    sendingStatus.innerHTML = `<div class="spinner-border text-dark" role="status" style="height: 30px; width: 30px">
                <span class="visually-hidden">Loading...</span>
              </div>`;

    const receiptData = {
      action: action.value,
      customer_name: customerName.value,
      customer_id: customerId.value,
      payment: payment.value,
      invoice_number: invoiceNumber.value,
      initial_balance: initialBalance.value,
      final_balance: finalBalance.value,
      created_at: createdAt.value,
      menu_names: menuNames.value,
      menu_amount: menuAmount.value,
      menu_prices: menuPrices.value,
      menu_kinds: menuKinds.value,
      menu_discounts: menuDiscounts.value,
      menu_discount_percents: menuDiscountPercents.value,
    };

    try {
      const response = await fetch('http://localhost:3001/api/receipt/send', {
        method: 'POST', // *GET, POST, PUT, DELETE, etc.
        mode: 'cors', // no-cors, *cors, same-origin
        cache: 'no-cache', // *default, no-cache, reload, force-cache, only-if-cached
        credentials: 'same-origin', // include, *same-origin, omit
        headers: {
          'Content-Type': 'application/json',
          // 'Content-Type': 'application/x-www-form-urlencoded',
        },
        redirect: 'follow', // manual, *follow, error
        referrerPolicy: 'no-referrer', // no-referrer, *no-referrer-when-downgrade, origin, origin-when-cross-origin, same-origin, strict-origin, strict-origin-when-cross-origin, unsafe-url
        body: JSON.stringify(receiptData), // body data type must match "Content-Type" header
      });

      const data = await response.json();
      console.log(data);

      sendingStatus.innerHTML = `<svg style="height: 35px; width: 35px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                <g id="SVGRepo_iconCarrier">
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M19.7071 6.29289C20.0976 6.68342 20.0976 7.31658 19.7071 7.70711L10.4142 17C9.63316 17.7811 8.36683 17.781 7.58579 17L3.29289 12.7071C2.90237 12.3166 2.90237 11.6834 3.29289 11.2929C3.68342 10.9024 4.31658 10.9024 4.70711 11.2929L9 15.5858L18.2929 6.29289C18.6834 5.90237 19.3166 5.90237 19.7071 6.29289Z"
                    fill="#000000"
                  ></path>
                </g>
              </svg>`;
    } catch (error) {
      console.log(error);
      sendingStatus.innerHTML = 'Error';
    }
  });
</script>
