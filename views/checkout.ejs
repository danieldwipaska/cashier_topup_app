<% if (alert) { %>
<div class="container-md my-1">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="alert alert-dismissible alert-warning fade show mb-3">
        <button type="button" class="btn-close" data-mdb-toggle="animation" data-mdb-animation="slide-right" data-mdb-animation-start="onLoad" data-bs-dismiss="alert"></button>
        <strong>Oh no!</strong> <%= alert %>
      </div>
    </div>
  </div>
</div>
<% } %>
<div class="container my-1">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h3>Check-Out</h3>
    </div>
  </div>
</div>
<div class="container-md mt-1 mb-3">
  <div class="row my-1">
    <div class="col-md-9 mx-auto my-1 px-4">
      <form action="/checkout" method="post">
        <div class="row">
          <div class="mb-1">
            <label for="barcode" class="form-label text-secondary">Card</label>
            <input type="text" class="form-control" id="barcode" name="barcode" readonly value="<%= data.barcode %>" />
          </div>

          <div class="mb-1">
            <label for="customerName" class="form-label text-secondary">Name</label>
            <input type="text" class="form-control" id="customerName" name="customerName" value="<%= data.customer_name %>" readonly />
          </div>

          <div class="mb-1 col-auto">
            <label for="customerId" class="form-label text-secondary">Costumer ID</label>
            <input type="text" class="form-control" id="customerId" name="customerId" value="<%= data.customer_id %>" readonly />
          </div>

          <!-- <div class="mb-1 col-auto">
            <label for="servedBy" class="form-label text-secondary">Served By</label>
            <input type="text" class="form-control" id="servedBy" name="servedBy" required />
          </div>

          <div class="mb-1 col-auto">
            <label for="collectedBy" class="form-label text-secondary">Collected By</label>
            <input type="text" class="form-control" id="collectedBy" name="collectedBy" required />
          </div> -->

          <div class="mb-1 col-auto">
            <label for="balance" class="form-label text-secondary">Balance</label>
            <input type="text" class="form-control" id="balance" name="balance" value="<%= Intl.NumberFormat('en-US').format(data.balance) %>" readonly />
          </div>

          <div class="mb-1 col-auto">
            <label for="deposit" class="form-label text-secondary">Deposit</label>
            <input type="text" class="form-control" id="deposit" name="deposit" value="<%= Intl.NumberFormat('en-US').format(data.deposit) %>" readonly />
          </div>

          <% if (data.is_member) { %>
          <div class="mb-1 col-auto">
            <label for="isMember" class="form-label text-secondary">Member Status</label>
            <input type="text" class="form-control bg-success text-light" id="isMember" name="isMember" value="yes" readonly />
          </div>
          <% } else { %>
          <div class="mb-1 col-auto">
            <label for="isMember" class="form-label text-secondary">Member Status</label>
            <input type="text" class="form-control bg-danger text-light" id="isMember" name="isMember" value="no" readonly />
          </div>
          <% } %> <% if (data.is_active) { %>
          <div class="mb-1 col-auto">
            <label for="isActive" class="form-label text-secondary">Activation</label>
            <input type="text" class="form-control bg-success text-light" id="isActive" name="isActive" value="active" readonly />
          </div>
          <% } else { %>
          <div class="mb-1 col-auto">
            <label for="isActive" class="form-label text-secondary">Activation</label>
            <input type="text" class="form-control bg-danger text-light" id="isActive" name="isActive" value="inactive" readonly />
          </div>
          <% } %>
        </div>
        <div class="row my-5 multi-button">
          <div class="col-lg-8 mx-auto text-center">
            <a class="button shadow my-3" href="/checkout/search" role="button">Back</a>

            <% if (data.is_active === true) { %>
            <button class="button shadow my-3" type="submit">Check-Out</button>
            <% } %>

            <a class="button shadow my-3" href="/" role="button">Menu</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
